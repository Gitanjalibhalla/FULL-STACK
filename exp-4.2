<!DOCTYPE html>
<html>
<head>
    <title>Student Management</title>
</head>
<body>
    <h1>Students List</h1>
    <a href="/add">Add New Student</a>
    <table border="1" cellpadding="10">
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Department</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        <% students.forEach(student => { %>
            <tr>
                <td><%= student.name %></td>
                <td><%= student.age %></td>
                <td><%= student.department %></td>
                <td><%= student.email %></td>
                <td>
                    <a href="/edit/<%= student._id %>">Edit</a>
                    <a href="/delete/<%= student._id %>">Delete</a>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
